<h1>Movie #<%= @the_movie.id %> details</h1>

<% matching_records = Director.where({ :id => @the_movie.director_id }) %>
<% the_director = matching_records.at(0) %>

<dl>
  <dt>Title</dt>
  <dd><%= @the_movie.title %></dd>

  <dt>Year</dt>
  <dd><%= @the_movie.year %></dd>

  <dt>Duration</dt>
  <dd><%= @the_movie.duration %></dd>

  <dt>Description</dt>
  <dd><%= @the_movie.description %></dd>

  <dt>Image</dt>
  <dd>
    <% if @the_movie.image.present? %>
      <img src="<%= @the_movie.image %>" width="100">
    <% else %>
      No image available
    <% end %>
  </dd>

  <dt>Director</dt>
  <dd><%= the_director.name %></dd>

  <dt>Created at</dt>
  <dd><%= @the_movie.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @the_movie.updated_at %></dd>
</dl>
