<h1>List of Actors</h1>

<table border="1">
<tr>
<th>ID</th>
<th>Image</th>
<th>Name</th>
<th>Dob</th>
<th></th>
</tr>

<%= Actor.all.each do |the_actor| %>
<tr>
<td><%= the_actor.id %></td>
<td>
<img src="<%= the_actor.image %>" width="100">
</td>
<td><%= the_actor.name %></td>
<td><%= the_actor.dob %></td>
<td>
<a href="/actors/<%= the_actor.id %>">Show details</a>
</td>
</tr>
<% end %>

</table>
